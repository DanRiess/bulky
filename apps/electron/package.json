{
	"name": "bulky",
	"version": "0.0.2",
	"description": "Bulk trading in-game overlay for Path of Exile. Made with Electron, VueJs and Typescript.",
	"main": "./out/main/index.js",
	"author": "Daniel Riess",
	"homepage": "",
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.vue --fix",
		"typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
		"typecheck:web": "vue-tsc --noEmit -p tsconfig.web.json --composite false",
		"typecheck": "pnpm typecheck:node && pnpm typecheck:web",
		"start": "electron-vite preview",
		"dev": "electron-vite dev --watch",
		"debug": "electron-vite --inspect --sourcemap",
		"build": "pnpm typecheck && electron-vite build",
		"package:win": "npm run build && electron-builder --win --config",
		"package:mac": "pnpm build && electron-builder --mac --config",
		"package:linux": "pnpm build && electron-builder --linux --config"
	},
	"build": {
		"productName": "Bulky",
		"publish": {
			"provider": "generic",
			"url": "http://localhost:1234/release"
		},
		"win": {
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true
		}
	},
	"dependencies": {
		"@electron-toolkit/preload": "^3.0.1",
		"@electron-toolkit/utils": "^3.0.0",
		"active-win": "8",
		"axios": "^1.7.7",
		"chokidar": "^4.0.1",
		"electron-overlay-window": "^3.3.0",
		"electron-updater": "^6.3.9",
		"express": "^4.21.1",
		"read-last-lines": "^1.8.0",
		"uiohook-napi": "^1.5.4",
		"uuid": "^10.0.0"
	},
	"devDependencies": {
		"@dan_riess/eslint-config": "^0.0.1",
		"@electron-toolkit/tsconfig": "^1.0.1",
		"@total-typescript/ts-reset": "^0.6.1",
		"@types/express": "^5.0.0",
		"@types/lodash": "^4.17.12",
		"@types/node": "^22.7.7",
		"@types/uuid": "^10.0.0",
		"@vitejs/plugin-vue": "^5.1.4",
		"@vueuse/core": "^11.1.0",
		"debug": "^4.3.7",
		"electron": "^33.0.1",
		"electron-builder": "^25.1.8",
		"electron-log": "^5.2.0",
		"electron-vite": "^2.3.0",
		"gsap": "^3.12.5",
		"idb": "^8.0.0",
		"lodash": "^4.17.21",
		"pinia": "^2.2.4",
		"typescript": "^5.6.3",
		"vite": "^5.4.9",
		"vue": "^3.5.12",
		"vue-router": "^4.4.5",
		"vue-tsc": "^2.1.6"
	}
}